---
const { label, text, color } = Astro.props;
---

<div class="flow-item">
  <h3 class="flow-item-label" style={`color: ${color}`} set:html={label}></h3>
  <div class="flow-item-line"></div>
  <p class="flow-item-text" style={`color: ${color}`} set:html={text}></p>
</div>
<style>
  .flow-item {
    margin: 0;
    padding: 10px 20px;
    text-align: start;
    width: fit-content;
    width: 100%;
  }

  .flow-item-label {
    font-size: 2rem;
    font-weight: bold;
    margin: 0;
    word-break: keep-all;
    overflow-wrap: break-word;
  }

  .flow-item-line {
    border-top: 2px dashed white;
    margin: 10px 0;
    opacity: 0.7;
  }

  .flow-item-text {
    font-size: 1.2rem;
    margin: 0;
    color: white;
    word-break: keep-all;
    overflow-wrap: break-word;
  }

  @media (max-width: 768px) {
    .flow-item-label,
    .flow-item-text {
      text-align: center;
    }
  }
</style>
