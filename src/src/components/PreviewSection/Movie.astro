---
import { Image } from "astro:assets";
import q from "../../assets/preview-section/q.png";
---

<div class="overlay">
  <div class="box upper left"></div>
  <div class="box upper right"></div>
  <Image src={q} alt="" class="q" />
  <h3 class="movie-introductory-text">メタ就 〜 あつまれ就活の森 〜とは？</h3>
  <iframe
    class="movie"
    width="560"
    height="315"
    src="https://www.youtube.com/embed/zlwkHfKWNm4?si=UBYWSTdnbUCgK9KH&controls=0"
    title="YouTube video player"
    frameborder="0"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
    referrerpolicy="strict-origin-when-cross-origin"
    allowfullscreen></iframe>
  <div class="box rower left"></div>
  <div class="box rower right"></div>
</div>
<style>
  .overlay {
    position: relative;
    background-color: rgba(0, 0, 0, 0.4);
    width: 75%;
    padding: 2rem;
    margin: 0 auto;
  }

  .q {
    width: 8%;
    height: 8%;
    margin: 0 auto;
  }

  .movie-introductory-text {
    font-size: 2rem;
    text-align: center;
    text-shadow:
      0 0 10px rgba(24, 138, 143, 0.85),
      0 0 20px rgba(24, 138, 143, 0.85),
      0 0 30px rgba(24, 138, 143, 0.85);
    margin: 1.5rem auto;
  }

  .movie {
    display: block;
    margin: 0 auto;
    width: 80%;
    height: 600px;
  }

  .box {
    position: absolute;
    background-color: white;
    width: 25px;
    height: 25px;
  }

  .upper {
    top: -10px;
  }

  .rower {
    bottom: -10px;
  }

  .left {
    left: -10px;
  }

  .right {
    right: -10px;
  }

  /* モバイル（小）: ~480px */
  @media (max-width: 480px) {
    .overlay {
      width: 90%;
      padding: 1rem;
    }

    .q {
      width: 15%;
      height: auto;
    }

    .movie-introductory-text {
      font-size: 1rem;
      margin: 1rem auto;
    }

    .movie {
      width: 100%;
      height: 200px;
    }

    .box {
      width: 15px;
      height: 15px;
    }
  }

  /* モバイル（大）: 480px~768px */
  @media (min-width: 480px) and (max-width: 768px) {
    .overlay {
      width: 90%;
      padding: 1.5rem;
    }

    .q {
      width: 12%;
      height: auto;
    }

    .movie-introductory-text {
      font-size: 1.3rem;
      margin: 1.2rem auto;
    }

    .movie {
      width: 95%;
      height: 300px;
    }

    .box {
      width: 20px;
      height: 20px;
    }
  }

  /* タブレット: 768px~1024px */
  @media (min-width: 768px) and (max-width: 1024px) {
    .overlay {
      width: 85%;
    }

    .q {
      width: 10%;
      height: auto;
    }

    .movie-introductory-text {
      font-size: 1.6rem;
    }

    .movie {
      width: 90%;
      height: 450px;
    }
  }

  /* デスクトップ（大）: 1440px~ */
  @media (min-width: 1440px) {
    .overlay {
      max-width: 1200px;
    }

    .movie {
      max-height: 700px;
    }
  }
</style>
