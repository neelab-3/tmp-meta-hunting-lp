---
import { Image } from "astro:assets";
import logo from "../../assets/preview-section/logo.png";
import GatherTogether from "./GatherTogether.astro";
---

<h3 id="catch-phrase">
  それが
  <div class="logo-container">
    <span class="logo-text">メタバース新卒×就職イベント</span>
    <Image
      src={logo}
      alt="メタバース新卒ロゴ"
      class="logo"
      width={350}
      height={123}
      loading="lazy"
    />
    <GatherTogether />
  </div>
  です。
</h3>
<style>
  #catch-phrase {
    display: flex;
    position: relative;
    justify-content: end;
    align-items: center;
    font-size: 2.5rem;
    width: fit-content;
    height: 6rem;
    margin: 5rem auto 3rem auto;
    padding: 1rem 3rem;
    white-space: nowrap;
    overflow: visible;
    isolation: isolate;
  }

  #catch-phrase::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    clip-path: polygon(
      /* 左上 */ 7% 0%,
      /* 右上 */ 100% 0%,
      /* 右下（斜め） */ 93% 100%,
      /* 左下（斜め） */ 0% 100%
    );
    background: linear-gradient(
      to right,
      /* 左 */ rgb(49, 179, 174),
      /* 中央 */ rgb(0, 43, 178),
      /* 右 */ rgb(129, 35, 91)
    );
    z-index: -1;
  }

  .logo-container {
    position: relative;
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    margin: 0 1rem;
    top: -2rem;
    z-index: 100;
  }

  .logo-text {
    font-size: 0.9rem;
    font-weight: bold;
    color: #add8f4;
    position: absolute;
    z-index: 100;
    top: 0.6em;
    left: 10px;
    white-space: nowrap;
  }

  /* タブレット: 768px~1024px */
  @media (min-width: 768px) and (max-width: 1024px) {
    #catch-phrase {
      font-size: 2rem;
      margin: 4rem auto 2.5rem auto;
      padding: 0.8rem 2.5rem;
    }

    .logo-container {
      margin: 0 0.8rem;
      top: -1.6rem;
    }

    .logo {
      width: 280px;
    }

    .logo-text {
      font-size: 0.75rem;
      left: 5px;
    }
  }

  /* モバイル（大）: 480px~768px */
  @media (min-width: 480px) and (max-width: 768px) {
    #catch-phrase {
      font-size: 1.5rem;
      margin: 3rem auto 2rem auto;
      padding: 0.7rem 2rem;
    }

    .logo-container {
      margin: 0 0.7rem;
      top: -1.2rem;
    }

    .logo {
      width: 210px;
    }

    .logo-text {
      font-size: 0.65rem;
      left: -5px;
      top: 1em;
    }
  }

  /* モバイル（小）: 361px~480px */
  @media (min-width: 361px) and (max-width: 480px) {
    #catch-phrase {
      font-size: 1.2rem;
      margin: 2rem auto 2rem auto;
      padding: 0.5rem 1.5rem;
      height: 5rem;
    }

    .logo-container {
      margin: 0 0.5rem;
      top: -1.5rem;
    }

    .logo {
      width: 168px;
    }

    .logo-text {
      font-size: 0.45rem;
      left: 2px;
      top: 1.5em;
    }
  }

  /* モバイル（極小）: ~360px */
  @media (max-width: 360px) {
    #catch-phrase {
      font-size: 1rem;
      margin: 1.5rem auto 1.5rem auto;
      padding: 0.4rem 1rem;
      height: 5rem;
    }

    .logo-container {
      margin: 0 0.4rem;
      top: -1.5rem;
    }

    .logo {
      width: 180px;
      height: auto;
    }

    .logo-text {
      font-size: 0.35rem;
      left: 1px;
      top: 0.7em;
    }
  }
</style>
